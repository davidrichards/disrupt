

<div class="tab-content">
  <div class="tab-pane fade active in" id="photos">
    <p>
      <%= image_tag @startup.logo%>
    </p>
  </div>
  <div class="tab-pane fade" id="videos">
    ...
  </div>
  <div class="tab-pane fade" id="info">
    <p>
      <%= @startup.url %>
    </p>

    <p>
      <%= @startup.twitter %>
    </p>

    <p>
      <%= @startup.crunchbase %>
    </p>

    <p>
      <%= @startup.screenshot %>
    </p>
  </div>
</div>
<ul class="nav nav-tabs">
  <li><a href="#photos" data-toggle="tab">Photos</a></li>
  <li><a href="#videos" data-toggle="tab">Videos</a></li>
  <li><a href="#info" data-toggle="tab">Info</a></li>
</ul>




<% @startup.tags.each do |tag| %>
  <li><%= tag.name %></li>
<% end %>



<p>
  <%= @startup.description %>
</p>
<p>
<% @startup.discussions.each do |d| %>
<div class="row startup-discussion">
  <div class="vote-discussion rounded span1">
    
  </div>
  <div class="topic-icon rounded span1">
    <%= image_tag d.topic.icon %>
  </div>
  <div class="discussion span10">
    <h3><%= link_to d.title, startup_discussion_path(@startup, d) %></h3>
  </div>
  <div class="discussion-meta span10 offset2">
  Posted by <%= d.user.name %> (32)
  <% if can? :update, d %>
    <%= link_to 'Edit', edit_startup_discussion_path(@startup, d) %>
  <% end %>
  <% if can? :destroy, d %>
    <%= link_to 'Delete', [@startup, d], confirm: 'Are you sure?', method: :delete %>
  <% end %>
  </div>
</div>          
  <% end %>
</p>

<%= link_to 'New Discussion', new_startup_discussion_path(@startup) %> |



<%= link_to 'Edit', edit_startup_path(@startup) %> |
<%= link_to 'Back', startups_path %>
