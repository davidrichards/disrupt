<div class="row">
	<div id="myCarousel" class="carousel span6">
	          <!-- Carousel items -->
	          <div class="carousel-inner">
	            <% for s in Startup.all %>
	              <% if s==Startup.all.first%>
	                <div class="active item"><%=image_tag s.pictures.first.url%></div>
	              <% else %>
	                <div class="item"><%= image_tag s.pictures.first.url%></div>
	              <% end %>  
	            <% end %>
	          </div>
	          <!-- Carousel nav -->
	          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	        </div>
	</div>
</div>